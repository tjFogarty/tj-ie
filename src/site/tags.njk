---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

<article>
  <div class="c-hero">
    <div class="o-wrapper">
      <div class="c-hero__content">
        <h1 class="c-hero__title">
          <span class="c-hero__prompt" aria-hidden="true">></span><span class="glitch-text" aria-label="Tagged">Tagged</span> “{{ tag }}”
        </h1>
      </div>
    </div>
  </div>
  <div class="o-wrapper">
    {% set postslistYears = "off" %}
    {% set postslist = collections[ tag ] %}
    {% include "postslist.njk" %}
  </div>
</article>

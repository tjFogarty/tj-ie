---
layout: layouts/home.njk
permalink: /projects/
eleventyNavigation:
    key: Projects
    order: 3
---

<article>
  <div class="c-hero">
    <div class="o-wrapper">
      <div class="c-hero__content">
        <h1 class="c-hero__title">
          <span class="c-hero__prompt" aria-hidden="true">></span><span class="glitch-text" aria-label="Projects">Projects</span>
        </h1>
      </div>
    </div>
  </div>
  <div class="o-wrapper">
    {% if collections.projects.length > 0 %}
      <ol class="o-list-bare o-grid o-grid--3-col">
        {% set postslist = collections.projects %}
        {% for post in postslist | reverse %}
        <li {% if loop.index === 1 or loop.index === 2 %}class="o-grid-column-half"{% else %}class="o-grid-column-third"{% endif %}>
          {% include "components/post-teaser.njk" %}
        </li>
        {% endfor %}
      </ol>
    {% else %}
      <div class="c-empty-state">
        <p>No projects to display yet. Check back soon!</p>
      </div>
    {% endif %}
  </div>
</article>

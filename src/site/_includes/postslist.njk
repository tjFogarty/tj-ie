{% if postslistYears === 'off' %}
<ol class="post-list">
{% endif %}

{% set year = '' %}
  {% for post in postslist | reverse %}
    {% set postYear = post.date | year %}
    {% set isNewYear = year !== postYear %}
    {% if isNewYear and postslistYears !== 'off' %}

    {# this reminds me of working with ExpressionEngine #}
    {% if not loop.first %}
    </ol>
    </div>
    {% endif %}

    <div class="post-list--year-container">
      <div class="post-list__year-column">
        <h2 class="post-list__year">{{ postYear }}</h2>
      </div>

      <ol class="post-list">
      {% set year = postYear %}
    {% endif %}
    <li class="post-list__item {% if not post.data.description %} pb-8 {% endif %}">
      {% include 'components/post-teaser.njk' %}
    </li>
  {% endfor %}
{% if postslistYears === 'off' %}
</ol>
{% endif %}

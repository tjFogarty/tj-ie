---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article>
  {% if date %}
  <time datetime="{{ date | htmlDateString }}" class="text-gray-600 vr-normal-base">
    {{ date | readableDate }}
  </time>
  {% endif %}

  <h1>{{ title }}</h1>

  {{ content | safe }}

  <p><a href="{{ '/' | url }}">← Home</a></p>
</article>

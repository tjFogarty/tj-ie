---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="container">
  <article class="prose mx-auto">
    {% if date %}
    <time class="text-sm text-gray-700" datetime="{{ date | htmlDateString }}">
      {{ date | readableDate }}
    </time>
    {% endif %}

    <h1>{{ title }}</h1>

    <div>
      {{ content | safe }}
      {% for tag in tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" aria-label="See all {{ tag }} posts">
          {{ tag }}
        </a>
        {%- endif -%}
      {% endfor %}

      <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
    </div>


  </article>
</div>

{% if header %}
  {% include 'components/header/' + header + '.njk' %}
{% endif %}
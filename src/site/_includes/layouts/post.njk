---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="container mt-14">
<div class="md:backdrop-blur md:bg-white/60 md:max-w-[800px] md:ml-auto md:mr-auto md:py-2">
  <article class="prose mx-auto">
    {% if date %}
    <time class="text-sm text-gray-700" datetime="{{ date | htmlDateString }}">
      {{ date | readableDate }}
    </time>
    {% endif %}

    <h1>{{ title }}</h1>

    {{ content | safe }}

    {% for tag in tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="mr-2 inline-block mt-3" aria-label="See all {{ tag }} posts">
        {{ tag }}
      </a>
      {%- endif -%}
    {% endfor %}

    <p><a href="{{ '/' | url }}">‚Üê Home</a></p>

    {% for tag in tags %}
        {%- if tag === "posts" -%}
        <a href="https://www.buymeacoffee.com/tj" target="_blank"><img src="https://cdn.buymeacoffee.com/buttons/v2/default-blue.png" alt="Buy Me A Coffee" style="height: 60px !important;width: 217px !important;" ></a>
        {%- endif -%}
    {% endfor %}

  </article>
  </div>
</div>

{% if header %}
  {% include 'components/header/' + header + '.njk' %}
{% endif %}

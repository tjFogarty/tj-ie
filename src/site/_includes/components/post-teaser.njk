{% set level = hlevel or '2' %}

<a href="{{ post.url | url }}" class="block no-underline">
  <time datetime="{{ post.date | htmlDateString }}" class="text-gray-700 vr-normal-sm mt-0 inline-block">
    {{ post.date | readableDate }}
  </time>

  <h{{ level }} class="mt-0 pt-0">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h{{ level }}>

  {% if post.data.description %}
  <p class="mt-2 vr-normal-base text-gray-900 pb-6">{{ post.data.description }}</p>
  {% endif %}
</a>

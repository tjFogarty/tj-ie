  {% for i in range(0, 15) %}

  {% set size %} {{ sizes | random }}{% endset %}
  {% set top %} {{ positions | random }}{% endset %}
  {% set left %} {{ positions | random }}{% endset %}

  <svg class="checkmark-header__svg absolute opacity-0 will-change-[opacity]" viewBox="0 0 100 100" width="{{ size | trim }}" height="{{ size | trim }}" style="top: {{ top | trim }}%; inset-inline-start: {{ left | trim }}%; animation-delay: 0.{{ i }}s">

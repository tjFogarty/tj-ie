permalink: /journal/
date: 2023-11-20T18:28:24+01:00
templateClass: tmpl-journal
eleventyNavigation:
    key: Journal
    order: 3
---

<article>
  <div class="c-hero">
    <div class="o-wrapper">
      <div class="c-hero__content">
        <h1 class="c-hero__title">
          <span class="c-hero__prompt" aria-hidden="true">></span>Journal
        </h1>
      </div>
    </div>
  </div>
  <div class="o-wrapper">
    <ol class="o-list-bare o-grid o-grid--3-col">
      {% set postslist = collections.journal %}
      {% for post in postslist | reverse %}
        {% if post.data.permalink !== "/journal/" %}
          {% if loop.index === 1 %}
            {% set modifier = "c-teaser--large" %}
          {% else %}
            {% set modifier = "" %}
          {% endif %}
          <li {% if loop.index === 1 %}class="o-grid-column-full"{% endif %}>{% include "components/post-teaser.njk" %}</li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
</article>

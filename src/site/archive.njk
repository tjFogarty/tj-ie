---
layout: layouts/home.njk
permalink: /archive/
eleventyNavigation:
    key: Archive
    order: 2
---

<article>
  <div class="c-hero">
    <div class="o-wrapper">
      <div class="c-hero__content">
        <h1 class="c-hero__title">
          <span class="c-hero__prompt" aria-hidden="true">></span>Archive
        </h1>
      </div>
    </div>
  </div>
  <div class="o-wrapper">
    <ol class="o-list-bare o-grid o-grid--3-col">
      {% set postslist = collections.posts %}
      {% for post in postslist | reverse %}
        {% if post.data.permalink !== "/journal/" %}
          <li {% if loop.index === 1 or loop.index === 2 %}class="o-grid-column-half"{% else %}class="o-grid-column-third"{% endif %}>
            {% include "components/post-teaser.njk" %}
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
</article>

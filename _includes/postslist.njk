{% set year = '' %}
<ol>
  {% for post in postslist | reverse %}
    {% set postYear = post.date | year %}
    {% set isNewYear = year !== postYear %}
    {% if isNewYear and postslistYears !== 'off' %}
      <li>
        <h2>{{ postYear }}</h2>
      </li>
      {% set year = postYear %}
    {% endif %}
    <li>
      <a href="{{ post.url | url }}">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
      </a>
      {# <time class="c-post-list__item-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time> #}
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </li>
  {% endfor %}
</ol>

{
  "name": "tj-personal-site",
  "private": true,
  "version": "1.0.0",
  "description": "Personal website.",
  "scripts": {
    "clean": "rimraf dist",
    "debug": "DEBUG=* eleventy",
    "dev": "npm-run-all clean --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:tailwind": "npx tailwindcss -i src/site/assets/css/index.css -o _site/assets/css/styles.css --watch",
    "build:tailwind": "npx tailwindcss -i src/assets/css/index.css -o _site/assets/css/styles.css --minify",
    "build:eleventy": "ELEVENTY_PRODUCTION=true npx @11ty/eleventy",
    "build": "NODE_ENV=production npm-run-all clean build:*"
  },
  "license": "MIT",
  "homepage": "https://tj.ie",
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-img": "3.1.0",
    "@11ty/eleventy-navigation": "0.3.5",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "clean-css": "5.3.2",
    "html-minifier": "4.0.0",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2"
  }
}